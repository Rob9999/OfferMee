{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "HistoryModel",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "title": "ID",
            "readOnly": true
        },
        "related_type": {
            "type": "string",
            "enum": [
                "ADDRESS",
                "CONTACT",
                "RFP",
                "OFFER",
                "CONTRACT",
                "APPLICANT",
                "CV",
                "PROJECT",
                "INTERVIEW",
                "COMPANY",
                "EMPLOYEE",
                "FREELANCER",
                "WORKPACKAGE",
                "CAPABILITIES"
            ],
            "title": "Related Type"
        },
        "related_id": {
            "type": "integer",
            "title": "Related ID"
        },
        "description": {
            "type": "string",
            "title": "Description"
        },
        "event_date": {
            "type": "string",
            "format": "date-time",
            "title": "Event Date"
        },
        "created_by": {
            "type": "string",
            "title": "Created By",
            "readOnly": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "title": "Created At",
            "readOnly": true,
            "default": "<function datetime.utcnow at 0x0000027F762507C0>"
        }
    },
    "required": [
        "id",
        "related_type",
        "related_id",
        "event_date",
        "created_by"
    ]
}