{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "HistoryModel",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "related_type": {
            "type": "string",
            "enum": [
                "ADDRESS",
                "CONTACT",
                "REQUEST",
                "OFFER",
                "CONTRACT",
                "APPLICATION",
                "CV",
                "PROJECT",
                "INTERVIEW",
                "COMPANY",
                "EMPLOYEE",
                "WORKPACKAGE",
                "CAPABILITIES"
            ],
            "maxLength": 12
        },
        "related_id": {
            "type": "integer"
        },
        "description": {
            "type": "string"
        },
        "event_date": {
            "type": "string"
        },
        "created_by": {
            "type": "string"
        },
        "created_at": {
            "type": "string",
            "default": "<function datetime.utcnow at 0x000001C3D33640E0>"
        }
    },
    "required": [
        "id",
        "related_type",
        "related_id",
        "event_date",
        "created_by"
    ]
}