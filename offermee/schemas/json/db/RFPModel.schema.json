{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "RFPModel",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "title": "ID",
            "readOnly": true
        },
        "project_title": {
            "type": "string",
            "title": "Project Title",
            "description": "The project title"
        },
        "description": {
            "type": "string",
            "title": "Description",
            "description": "The project description (summarized, up to 20 lines)"
        },
        "location": {
            "type": "string",
            "enum": [
                "Remote",
                "OnSite",
                "Hybrid"
            ],
            "title": "Location",
            "description": "Expected working modality: Remote, On-site or Hybrid"
        },
        "must_have_requirements": {
            "type": "string",
            "title": "Must-have Requirements",
            "default": "<function list at 0x000001F8F9810D60>",
            "description": "Mandatory requirements for the project"
        },
        "nice_to_have_requirements": {
            "type": "string",
            "title": "Nice-to-have Requirements",
            "default": "<function list at 0x000001F8F9810E00>",
            "description": "Desirable additional requirements"
        },
        "tasks": {
            "type": "string",
            "title": "Tasks",
            "default": "<function list at 0x000001F8F9810EA0>",
            "description": "List of tasks in the project"
        },
        "responsibilities": {
            "type": "string",
            "title": "Responsibilities",
            "default": "<function list at 0x000001F8F9810F40>",
            "description": "List of responsibilities in the project"
        },
        "max_hourly_rate": {
            "type": "number",
            "title": "Max Hourly Rate",
            "description": "Maximum hourly rate (if available)"
        },
        "other_conditions": {
            "type": "string",
            "title": "Other Conditions",
            "description": "Other conditions or requirements"
        },
        "contact_person": {
            "type": "string",
            "title": "Contact Person",
            "description": "Contact person for the project"
        },
        "contact_person_email": {
            "type": "string",
            "title": "Contact Person Email",
            "description": "Email of the contact person for the project (if available)"
        },
        "provider": {
            "type": "string",
            "title": "Provider",
            "description": "Project provider (if available)"
        },
        "provider_link": {
            "type": "string",
            "title": "Provider Link",
            "description": "Link to the project provider (if available)"
        },
        "start_date": {
            "type": "string",
            "title": "Start Date",
            "description": "Start date in format dd.mm.yyyy or mm.yyyy"
        },
        "end_date": {
            "type": "string",
            "title": "End Date",
            "description": "End date in format dd.mm.yyyy or mm.yyyy"
        },
        "duration": {
            "type": "integer",
            "title": "Duration",
            "description": "Duration in months"
        },
        "extension_option": {
            "type": "string",
            "enum": [
                "Yes",
                "No"
            ],
            "title": "Extension Option",
            "description": "Option to extend the project duration"
        },
        "original_link": {
            "type": "string",
            "title": "Original Link",
            "description": "Link to the original source of the project"
        }
    },
    "required": [
        "id",
        "project_title",
        "must_have_requirements",
        "nice_to_have_requirements",
        "tasks",
        "responsibilities"
    ]
}