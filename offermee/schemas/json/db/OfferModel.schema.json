{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "OfferModel",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "title": "ID",
            "readOnly": true
        },
        "project_id": {
            "type": "integer",
            "title": "Project ID"
        },
        "offer_number": {
            "type": "string",
            "title": "Offer Number"
        },
        "title": {
            "type": "string",
            "title": "Title"
        },
        "status": {
            "type": "string",
            "enum": [
                "DRAFT",
                "SENT",
                "FOLLOW_UP",
                "FINALIZED"
            ],
            "title": "Status",
            "default": "DRAFT"
        },
        "offer_contact_person": {
            "type": "string",
            "title": "Offer Contact Person"
        },
        "offer_contact_person_email": {
            "type": "string",
            "title": "Offer Contact Person Email"
        },
        "offer_text": {
            "type": "string",
            "title": "Offer Text"
        },
        "sent_date": {
            "type": "string",
            "format": "date-time",
            "title": "Sent Date"
        },
        "last_follow_up_date": {
            "type": "string",
            "format": "date-time",
            "title": "Last Follow Up Date"
        },
        "follow_up_count": {
            "type": "integer",
            "title": "Follow Up Count",
            "default": 0
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "title": "Created At",
            "readOnly": true,
            "default": "<function datetime.utcnow at 0x000001B2F58FF100>"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time",
            "title": "Updated At",
            "readOnly": true,
            "default": "<function datetime.utcnow at 0x000001B2F58FF1A0>"
        }
    },
    "required": [
        "id",
        "offer_number",
        "title",
        "offer_contact_person",
        "offer_contact_person_email",
        "follow_up_count"
    ]
}